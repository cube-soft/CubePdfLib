        xmlns:l="clr-namespace:CubePdf.Wpf"
        Title="MockWindow" Height="600" Width="800">
    <DockPanel>
        <Menu Name="HeaderMenu" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="OpenItem_Click" />
                <MenuItem Header="E_xit" Click="ExitItem_Click" />
